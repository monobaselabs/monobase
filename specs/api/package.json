{
  "name": "@monobase/api-spec",
  "version": "0.1.0",
  "description": "TypeSpec API definitions for Monobase platform",
  "type": "module",
  "exports": {
    "./openapi.json": "./dist/openapi/openapi.json",
    "./openapi.yaml": "./dist/openapi/openapi.yaml",
    "./types": "./dist/typescript-types/api.d.ts",
    "./utils/*": "./src/utils/*"
  },
  "files": [
    "dist/",
    "src/",
    "tspconfig.yaml"
  ],
  "scripts": {
    "build:openapi": "tsp compile src/main.tsp && mkdir -p dist/openapi && cp dist/@typespec/openapi3/openapi.json dist/openapi/openapi.json && bun run scripts/post-process-openapi.ts",
    "build:types": "mkdir -p dist/typescript-types && npx openapi-typescript dist/openapi/openapi.json -o dist/typescript-types/api.d.ts",
    "build": "bun run build:openapi && bun run build:types",
    "docs": "bun run docs-server.ts",
    "format": "tsp format src/**/*.tsp",
    "lint": "tsp compile . --no-emit",
    "validate": "tsp compile . --emit @typespec/openapi3 --no-emit",
    "clean": "rimraf dist/ tsp-output/"
  },
  "dependencies": {
    "@scalar/api-reference": "^1.34.6",
    "@typespec/compiler": "^1.3.0",
    "@typespec/http": "^1.3.0",
    "@typespec/json-schema": "^1.3.0",
    "@typespec/openapi": "^1.3.0",
    "@typespec/openapi3": "^1.3.0",
    "@typespec/rest": "^0.73.0",
    "@typespec/versioning": "^0.73.0"
  },
  "devDependencies": {
    "openapi-typescript": "^7.4.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "keywords": [
    "typespec",
    "openapi",
    "api",
    "application",
    "monobase"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/monobase/mono.git",
    "directory": "specs/api"
  },
  "license": "MIT",
  "private": true
}
